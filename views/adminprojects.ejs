<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include ('layout') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <h3 class="my-4" align="center">DashBoard</h3>
                <div class="list-group">
                    <a href="/admin/projects/add" class="btn btn-primary">เพิ่มโปรเจค</a>
                </div>
            </div>
            <div class="col-lg-9">
                <h3 class="my-4" align="center">Admin Management</h3>
                <table class="table">
                    <thead class="table-dark">
                      <tr>
                          <th scope="col">ชื่อโปรเจค</th>
                          <th scope="col">วันเริ่มโปรเจค</th>
                          <th scope="col">Edit</th>
                          <th scope="col">Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% projects.forEach(function(project){ %>
                            <tr>
                                <th scope="row"> <%= project.name %> </th>
                                <td> <%= project.date %> </td>
                                <td>
                                    <a href="" class="btn btn-primary">Edit</a>
                                </td>
                                <td>
                                    <a href="" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        <% }) %> 
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
</body>
</html>